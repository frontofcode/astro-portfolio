---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const projects = await getCollection(
    "projects",
    ({ data }) => data.lang === "en",
);
const sortedProjects = projects.sort(
    (a, b) => (a.data.order ?? 99) - (b.data.order ?? 99),
);
---

<Layout
    title="Projects | Kyoshiro"
    description="Web development portfolio showcasing WordPress, E-commerce, and corporate website projects."
>
    <main class="bg-gray-900 text-white min-h-screen py-20 px-4">
        <div class="max-w-6xl mx-auto">
            <h1 class="text-4xl font-bold text-center mb-12">Projects</h1>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    sortedProjects.map((project) => (
                        <a
                            href={`/projects/${project.id.replace("en/", "").replace(".md", "")}`}
                            class="block bg-gray-800 rounded-lg overflow-hidden hover:scale-105 transition-transform"
                        >
                            {project.data.image ? (
                                <img
                                    src={project.data.image}
                                    alt={project.data.title}
                                    class="h-48 w-full object-cover"
                                />
                            ) : (
                                <div class="h-48 bg-gray-700 flex items-center justify-center">
                                    <span class="text-gray-500">No Image</span>
                                </div>
                            )}
                            <div class="p-6">
                                <h2 class="text-xl font-bold mb-2">
                                    {project.data.title}
                                </h2>
                                <p class="text-gray-400 mb-4">
                                    {project.data.description}
                                </p>
                                <div class="flex flex-wrap gap-2">
                                    {project.data.tags.map((tag) => (
                                        <span class="bg-blue-600 text-sm px-2 py-1 rounded">
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </main>
</Layout>
