---
import Layout from "../layouts/Layout.astro";

const skills = [
    { category: "CMS", items: ["WordPress", "Shopify", "WooCommerce"] },
    {
        category: "Frontend",
        items: ["HTML/CSS", "JavaScript", "Astro", "Tailwind CSS"],
    },
    { category: "Backend", items: ["PHP", "MySQL", "REST API"] },
    { category: "Tools", items: ["Git", "Figma", "Docker"] },
];
---

<Layout
    title="About | Kyoshiro"
    description="Learn about Kyoshiro, a freelance web developer with 5+ years of WordPress and E-commerce experience."
>
    <main class="bg-gray-900 text-white min-h-screen py-20 px-4">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold text-center mb-12">About Me</h1>

            <!-- Profile -->
            <section class="mb-16">
                <div class="flex flex-col md:flex-row gap-8 items-center">
                    <img
                        src="/images/profile.jpg"
                        alt="Kyoshiro"
                        class="w-48 h-48 rounded-full object-cover"
                    />
                    <div>
                        <h2 class="text-2xl font-bold mb-4">Kyoshiro</h2>
                        <p class="text-gray-300 leading-relaxed">
                            Freelance web developer based in Kobe, Japan. With
                            over 5 years of experience specializing in
                            WordPress, I handle everything from e-commerce sites
                            to corporate websites. Currently expanding into
                            modern tech stacks including Astro.
                        </p>
                    </div>
                </div>
            </section>

            <!-- Skills -->
            <section>
                <h2 class="text-2xl font-bold mb-8">Skills</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {
                        skills.map((skill) => (
                            <div class="bg-gray-800 p-6 rounded-lg">
                                <h3 class="text-lg font-bold text-blue-400 mb-3">
                                    {skill.category}
                                </h3>
                                <div class="flex flex-wrap gap-2">
                                    {skill.items.map((item) => (
                                        <span class="bg-gray-700 px-3 py-1 rounded text-sm">
                                            {item}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </section>
        </div>
    </main>
</Layout>
